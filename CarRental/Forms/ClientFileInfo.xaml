<Window x:Class="CarRental.Forms.ClientFileInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:CarRental.Forms"
        mc:Ignorable="d"
        Height="250" Width="450"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True" Loaded="Window_Loaded"
        FontSize="12"
        FontWeight="Medium">
    <Border CornerRadius="10"
            BorderThickness="1"
            Opacity="1"
            BorderBrush="#e3e3e3"
            Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <!--Header-->
            <Grid Grid.Row="0">
                <TextBlock Text="Работа с файлом"
                           Foreground="#243970"
                           FontFamily="Segoe UI"
                           FontSize="19"
                           FontWeight="Medium"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                <fa:IconImage Icon="Xmark" x:Name="ImageClose" HorizontalAlignment="Right" Height="25" Width="15" Margin="0,0,5,0" MouseDown="ImageClose_MouseDown"/>
                <fa:IconImage Icon="Minus" x:Name="ImageHide" HorizontalAlignment="Right" Height="25" Width="16" Margin="0,0,26,0" MouseDown="ImageHide_MouseDown"/>
            </Grid>
            <!--Body-->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid>
                    <Label Content="Ф.И.О. Клиента:"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
                </Grid>
                <Grid Grid.Column="1" Grid.ColumnSpan="2">
                    <ComboBox x:Name="ClientFIOComboBox"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Center"
                              Margin="5,0,5,0"
                              IsEditable="True"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Label Content="Описание файла:"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2">
                    <TextBox x:Name="DescriptionFile"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             Margin="5,0,5,0"/>
                </Grid>
                <Grid Grid.Row="2">
                    <Label Content="Имя файла:"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="2" Grid.Column="1">
                    <TextBox x:Name="NameFile"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             Margin="5,0,5,0"
                             IsEnabled="False"/>
                </Grid>
                <Grid Grid.Row="2" Grid.Column="2">
                    <Grid>
                        <Button x:Name="ButtonAddFile"
                                BorderThickness="0"
                                Content="Добавить"
                                Foreground="White"
                                Background="#FA896B"
                                FontSize="12"
                                FontFamily="Segoe UI"
                                Cursor="Hand"
                                Margin="0,0,0,0"
                                Click="ButtonAddFile_Click" Width="140" Height="28"
                                materialDesign:ButtonAssist.CornerRadius="6"
                                HorizontalAlignment="Center"/>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Row="2">
                <Grid Grid.Row="2">
                    <Button x:Name="ButtonSaveFile"
                        BorderThickness="0"
                        Content="Сохранить"
                        Foreground="White"
                        Background="#FA896B"
                        FontSize="12"
                        FontFamily="Segoe UI"
                        Cursor="Hand"
                        Margin="10,0,0,0"
                        Click="ButtonSaveFile_Click" Width="125" Height="30"
                        materialDesign:ButtonAssist.CornerRadius="6"
                        HorizontalAlignment="Left"/>
                </Grid>
            </Grid>
       </Grid>
    </Border>
</Window>
